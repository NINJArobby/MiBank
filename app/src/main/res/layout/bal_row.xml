<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dip"
    >

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dip"
        android:padding="3dip"
        >

        <TextView
            android:id="@+id/txtListType"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="/?"
            android:textSize="30dp"
            />

    </LinearLayout>

    <!-- Title Of Song-->
    <TextView
        android:id="@+id/txtListDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:singleLine="true"
        android:text="Description goes here"
        android:textColor="@color/zenithred"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans"
        />

    <!-- Artist Name -->
    <TextView
        android:id="@+id/txtListAmount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtListDesc"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Amount Goes Here"
        android:textColor="@color/zenithred"
        android:textSize="12dip"
        />

    <TextView
        android:id="@+id/txtListAccount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtListAmount"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:singleLine="true"
        android:text="Account here"
        android:textColor="@color/zenithred"
        android:textSize="10dip"
        />


    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/txtListDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtListAccount"
        android:layout_toRightOf="@+id/thumbnail"
        android:gravity="right"
        android:text="date"
        android:textColor="@color/zenithred"
        android:textSize="12dip"
        />

    <TextView
        android:id="@+id/txtListBranch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtListDate"
        android:layout_toRightOf="@+id/thumbnail"
        android:gravity="right"
        android:text="Branch"
        android:textColor="@color/zenithred"
        android:textSize="12dip"
        />

    <!-- Rightend Arrow -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo3"
        />

</RelativeLayout>